<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign education = data[1] | sort: 'startDate' | reverse %}

  {% for content in education %}
    <li class="list-group-item">
      <div class="row">

        <!-- LEFT COLUMN -->
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if content.startDate %}
            {% assign start = content.startDate %}
            {% assign end = content.endDate | default: 'Present' %}
            {% assign date = start | append: ' - ' | append: end %}
          {% endif %}

          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span
                    class="badge font-weight-bold danger-color-dark text-uppercase align-middle"
                    style="min-width: 90px"
                  >
                    {{ date }}
                  </span>
                </td>
              </tr>

              {% if content.location %}
                <tr>
                  <td>
                    <p class="location mb-2">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ content.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}

              {% if content.logo %}
                <tr>
                  <td>
                    <img
                      src="{{ content.logo | prepend: '/assets/img/education/' | relative_url }}"
                      alt="{{ content.institution }}"
                      style="max-width: 60px; max-height: 60px;"
                    >
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <!-- RIGHT COLUMN -->
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">

          <!-- Degree -->
          <h6 class="title font-weight-bold ml-1 ml-md-4 text-primary">
            {{ content.studyType }}
          </h6>

          <!-- Major (ABOVE university) -->
          {% if content.area %}
            <h6 class="ml-1 ml-md-4 font-italic">
              {{ content.area }}
            </h6>
          {% endif %}

          <!-- University -->
          <h6 class="ml-1 ml-md-4">
            <a href="{{ content.url }}" target="_blank" rel="noopener">
              {{ content.institution }}
            </a>
          </h6>

          <!-- Dissertation -->
          {% if content.dissertation %}
            <ul class="ml-1 ml-md-4 mt-2">
              {% for item in content.dissertation %}
                <li>{{ item }}</li>
              {% endfor %}
            </ul>
          {% endif %}

          <!-- Advisor -->
          {% if content.advisor %}
            <ul class="ml-1 ml-md-4">
              <li><strong>Advisor:</strong> {{ content.advisor }}</li>
            </ul>
          {% endif %}

        </div>
      </div>
    </li>
  {% endfor %}
</ul>
