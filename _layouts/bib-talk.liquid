---
<div class="row">
    {% if site.enable_publication_thumbnails %}
    <div class="col col-sm-2 abbr text-center">
  
      {% if entry.preview %}
        {% if entry.preview contains '://' %}
          <img class="preview z-depth-1 rounded" src="{{ entry.preview }}">
        {% else %}
          {% assign entry_path = entry.preview | prepend: '/assets/img/presentation_preview/' %}
          {% include figure.liquid
            loading="eager"
            path=entry_path
            sizes="200px"
            class="preview z-depth-1 rounded"
            zoomable=true
            avoid_scaling=true
            alt=entry.preview
          %}
        {% endif %}
      {% endif %}
  
      {% if entry.location %}
        <p class="location mt-1">
          <i class="fa-solid fa-location-dot iconlocation"></i>
          {{ entry.location }}
        </p>
      {% endif %}

    </div>
  {% endif %}


  <!-- Main content -->
  <div id="{{ entry.key }}" class="{% if site.enable_publication_thumbnails %}col-sm-8{% else %}col-sm-10{% endif %}">

    <!-- Month + Year ABOVE title -->
    {% if entry.month or entry.year %}
      <div class="text-muted small mb-1">
        {{ entry.month | capitalize }} {{ entry.year }}
      </div>
    {% endif %}

    <!-- Title (linked) -->
    <div class="title">
      {% if entry.url %}
        <a href="{{ entry.url }}" target="_blank" rel="noopener">
          {{ entry.title }}
        </a>
      {% else %}
        {{ entry.title }}
      {% endif %}
    </div>

    <!-- Venue -->
    {% if entry.venue %}
      <div class="periodical">
        <em>{{ entry.venue }}</em>
      </div>
    {% endif %}

    <!-- Links / Buttons -->
    <div class="links mt-2">
      {% if entry.abstract %}
        <a class="abstract btn btn-sm z-depth-0" role="button">Abs</a>
      {% endif %}
      
        {% if entry.slides %}
          {% if entry.slides contains '://' %}
            <a href="{{ entry.slides }}"
               class="btn btn-sm btn-outline-primary z-depth-0"
               target="_blank"
               rel="noopener noreferrer"
               role="button">
              Slides
            </a>
          {% else %}
            <a href="{{ entry.slides | prepend: '/assets/pdf/' | relative_url }}"
               class="btn btn-sm btn-outline-primary z-depth-0"
               target="_blank"
               rel="noopener noreferrer"
               role="button">
              Slides
            </a>
          {% endif %}
        {% endif %}

      {% if entry.poster %}
        {% if entry.poster contains '://' %}
          <a href="{{ entry.poster }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
        {% else %}
          <a href="{{ entry.poster | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">Poster</a>
        {% endif %}
      {% endif %}
      {% if entry.pdf %}
        {% if entry.pdf contains '://' %}
          <a href="{{ entry.pdf }}" class="btn btn-sm z-depth-0" role="button">PDF</a>
        {% else %}
          <a href="{{ entry.pdf | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0" role="button">PDF</a>
        {% endif %}
      {% endif %}
      {% if entry.video %}
        <a href="{{ entry.video }}" class="btn btn-sm z-depth-0" role="button">Video</a>
      {% endif %}
    </div>

    <!-- Hidden abstract -->
    {% if entry.abstract %}
      <div class="abstract hidden">
        <p>{{ entry.abstract }}</p>
      </div>
    {% endif %}

    <!-- Hidden bibtex -->
    {% if entry.bibtex_show %}
      <div class="bibtex hidden">
        {% highlight bibtex %}
        {{ entry.bibtex | hideCustomBibtex }}
        {% endhighlight %}
      </div>
    {% endif %}
  </div>
</div>
